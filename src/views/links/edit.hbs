<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">

                        <div class="form-group">
                            <input value="{{link.title}}" type="text" class="form-control" name="title" placeholder="Title" autofocus>
                        </div>

                        <div class="form-group mt-3">
                            <input value="{{link.url}}" type="url" class="form-control" name="url" placeholder="http://url.example">
                        </div>

                        <div class="form-group mt-3">
                            <textarea class="form-control" name="description" rows="3" placeholder="Description" style="resize:none">{{link.description}}</textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success mt-3" style="width:100%;">
                                Save
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
